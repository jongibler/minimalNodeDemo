<!doctype html>
<html>
<head>
	<% include ../components/adminHeader %>
	<script src="/controllers/adminIndex.js"></script>
	<style>
	.personTag{
		margin-right: 2px;
		margin-top:2px;
	}
	</style>
</head>
<body ng-app="adminIndex" ng-controller="AdminIndexController">
	<% include ../components/adminNavbar %>

	<div class="container">
		<div class="bs-docs-section">
			<div class="page-header">
				<div class="row">
					<div class="col-lg-12">
						<h1>Persons</h1>
						<h4><a href="admin/persons/new">Add New</a></h4>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12">
					<div class="bs-component">
						<table class="table table-striped table-hover ">
							<thead>
								<tr>
									<th>Name</th>
									<th>Description</th>
									<th>Tags</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<tr ng-repeat="person in allPersons">
									<td>{{person.firstName}} {{person.lastName}}</td>
									<td>{{person.description}}</td>
									<td>
										<a class="btn btn-info btn-xs personTag" ng-repeat="tag in person.tags">
											{{tag.text}}
										</a>
									</td>
								 	<td><a href="admin/persons/{{person._id}}" class="btn btn-primary btn-sm btn-block">Edit</a></td>
								</tr>
							</tbody>
						</table>

					</div>

				</div>
			</div>
		</div>
	</div>
</body>
</html>
