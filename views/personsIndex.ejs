<!doctype html>
<html>
<head>
	<% include ../components/header %>

	<script src="/controllers/personsIndex.js"></script>	
</head>
<body ng-app="personsIndex" ng-controller="PersonsIndexController">
	<% include ../components/navbar %>

	<div class="container">
		<div class="bs-docs-section">
			<div class="page-header">
				<div class="row">
					<div class="col-lg-12">
						<h1>Persons</h1>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12">
					<div class="bs-component">
						<table class="table table-striped table-hover ">
							<thead>
								<tr>
									<th>Name</th>
									<th>Description</th>
									<th>Tags</th>
								</tr>
							</thead>
							<tbody>
								<tr ng-repeat="person in allPersons">
									<td>{{person.firstName}} {{person.lastName}}</td>
									<td>{{person.description}}</td>
									<td>
										<a class="btn btn-info btn-xs personTag" ng-repeat="tag in person.tags">
											{{tag.text}}
										</a>
									</td>
								</tr>
							</tbody>
						</table>
						<div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div></div>

					</div>

				</div>
			</div>
		</div>
	</div>
</body>
</html>
